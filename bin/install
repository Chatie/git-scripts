#!/usr/bin/env node

// const fs = require('fs')
const path = require('path')

const pkgUp = require('pkg-up')

async function main () {
  const cwd = path.join(__dirname, '..', '..')
  const pkg = await pkgUp({ cwd })
  if (!pkg) {
    return 0
  }
  const pkgDir = path.dirname(pkg)

  return pkgDir && 0
}

main()
  .then(process.exit)
  .catch(e => {
    console.info(e)
    process.exit(1)
  })
